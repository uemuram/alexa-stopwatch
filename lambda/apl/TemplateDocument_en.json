{
    "type": "APL",
    "version": "1.5",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-viewport-profiles",
            "version": "1.0.0"
        }
    ],
    "resources": [],
    "styles": {},
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "data"
        ],
        "items": [
            {
                "type": "Container",
                "when": "${viewport.shape == 'round'}",
                "items": [
                    {
                        "type": "Text",
                        "text": "${data.timerStr}",
                        "textAlign": "center",
                        "fontSize": "10.5vw",
                        "paddingTop" : "16vh"
                    },
                    {
                        "type": "Text",
                        "text": "TIPS",
                        "fontSize": "4vw",
                        "paddingTop" : "12vh",
                        "paddingLeft" : "2vh"
                    },
                    {
                        "type": "Text",
                        "text": "・To restart the measurement     ：\"Alexa, resume.\"",
                        "fontSize": "2.8vw",
                        "paddingLeft" : "2vh"
                    },
                    {
                        "type": "Text",
                        "text": "・To measure from the beginning  ：\"Alexa, start over.\"",
                        "fontSize": "2.8vw",
                        "paddingLeft" : "2vh"
                    },
                    {
                        "type": "Text",
                        "text": "・To extend the measurement time ：\"Alexa, ask simple stopwatch to describe the expansion pack.\"",
                        "fontSize": "2.8vw",
                        "paddingLeft" : "2vh"
                    }
                ],
                "height": "100%",
                "width": "100%"
            },
            {
                "type": "Container",
                "items": [
                    {
                        "type": "Text",
                        "text": "${data.timerStr}",
                        "fontSize": "10vw"
                    },
                    {
                        "type": "Text",
                        "text": "TIPS",
                        "fontSize": "4vw",
                        "paddingTop" : "10vh"
                    },
                    {
                        "type": "Text",
                        "text": "・To restart the measurement     ：\"Alexa, resume.\"",
                        "fontSize": "2.9vw"
                    },
                    {
                        "type": "Text",
                        "text": "・To measure from the beginning  ：\"Alexa, start over.\"",
                        "fontSize": "2.9vw"
                    },
                    {
                        "type": "Text",
                        "text": "・To extend the measurement time ：\"Alexa, ask simple stopwatch to describe the expansion pack.\"",
                        "fontSize": "2.9vw"
                    }
                ],
                "height": "100%",
                "width": "100%"
            }
        ]
    }
}